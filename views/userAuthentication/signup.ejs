<link rel="stylesheet" href="/CSS/addlisting.css">


<body>
  <div class="form-container">
    <h1>REGISTER NOW</h1>
    <form class="location-form " method="Post" action="/signup" >
      <input type="text" name="place[name]" placeholder="Full Name" required>
      <input type="text" name="place[email]" placeholder="Email" required>
      <input type="text" name="place[username]" placeholder="Username" required >
      <input type="text" name="place[password]" placeholder="Password" required>
      <button type="submit">Submit</button>
    </form>
  </div>
</body>