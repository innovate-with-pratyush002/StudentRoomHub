<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" href="/CSS/edit.css">
<body>
  <div class="form-container">
    <h1>Edit Details</h1>
    <form method="POST" action="/listings/<%=Data._id%>?_method=PUT" class="edit-form">
      <label>Title</label>
      <input type="text" name="place[title]" value="<%=Data.title%>" required />

      <label>Description</label>
      <input type="text" name="place[description]" value="<%=Data.description%>" required />

      <label>Image URL</label>
      <input type="text" name="place[image]" value="<%=Data.image.url%>" required />

      <label>Price (â‚¹)</label>
      <input type="number" name="place[price]" value="<%=Data.price%>" required />

      <label>Location</label>
      <input type="text" name="place[location]" value="<%=Data.location%>" required />

      <label>State</label>
      <input type="text" name="place[state]" value="<%=Data.state%>" required />

      <button type="submit">Update Listing</button>
    </form>
  </div>
</body>





























